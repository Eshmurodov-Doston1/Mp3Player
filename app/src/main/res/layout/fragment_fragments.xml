<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentsFragment">

    <ImageView
        android:id="@+id/view_pager"
        android:src="@drawable/mmmm"
        app:layout_constraintBottom_toTopOf="@id/guide1"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/crop"
        app:layout_constraintTop_toTopOf="@id/view_pager"
        app:layout_constraintBottom_toBottomOf="@id/view_pager"
        app:layout_constraintLeft_toLeftOf="@id/view_pager"
        app:layout_constraintRight_toRightOf="@id/view_pager"
        android:background="#77FFFFFF"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="@id/crop"
        app:layout_constraintBottom_toBottomOf="@id/crop"
        app:layout_constraintLeft_toLeftOf="@id/crop"
        app:layout_constraintRight_toRightOf="@id/crop"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/menu"
            android:src="@drawable/ic_shape"
            app:layout_constraintBottom_toTopOf="@id/card1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card1"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/number"
            android:text="1/12"
            android:layout_marginRight="12dp"
            app:layout_constraintHorizontal_bias="0.7"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            app:layout_constraintRight_toLeftOf="@id/menu"
            app:layout_constraintBottom_toBottomOf="@id/menu"
            app:layout_constraintTop_toTopOf="@id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1_g"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1_v"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/mp3_name1"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Atirgulim"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/guide1_v"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/mp3_artist"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Atirgulim"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guide1_g"
            app:layout_constraintRight_toLeftOf="@id/guide2_g"
            app:layout_constraintTop_toBottomOf="@id/guide2_v"
            app:layout_constraintVertical_bias="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/guide1_v"
            app:layout_constraintBottom_toTopOf="@id/guide2_v"
            app:layout_constraintLeft_toRightOf="@id/guide1_g"
            app:layout_constraintRight_toLeftOf="@id/guide2_g">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_mp3_view"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mmmm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2_v"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2_g"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <SeekBar
        android:id="@+id/seekbar"
        android:progressBackgroundTint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="@id/guide1"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gov_time"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.05"
        android:textStyle="normal"
        android:textSize="12sp"
        android:text="05:12"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/slesh"
        app:layout_constraintLeft_toRightOf="@id/gov_time"
        app:layout_constraintTop_toTopOf="@id/gov_time"
        app:layout_constraintBottom_toBottomOf="@id/gov_time"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:text="/"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/time_mp3"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        app:layout_constraintLeft_toRightOf="@id/slesh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:textStyle="normal"
        android:textSize="12sp"
        android:text="05:12"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/play1"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/time_mp3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/paouse"
        android:layout_width="65dp"
        android:layout_height="65dp" />
    <ImageView
        android:id="@+id/left"
        app:layout_constraintTop_toTopOf="@id/play1"
        app:layout_constraintLeft_toRightOf="@id/second"
        app:layout_constraintBottom_toBottomOf="@id/play1"
        app:layout_constraintRight_toLeftOf="@id/play1"
        android:src="@drawable/ic_skip_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/second"
        app:layout_constraintTop_toTopOf="@id/play1"
        app:layout_constraintBottom_toBottomOf="@id/play1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/left"
        android:src="@drawable/ic_replay_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/right"
        app:layout_constraintTop_toTopOf="@id/play1"
        app:layout_constraintBottom_toBottomOf="@id/play1"
        app:layout_constraintLeft_toRightOf="@id/play1"
        app:layout_constraintRight_toLeftOf="@id/second2"
        android:src="@drawable/ic_skip_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/second2"
        app:layout_constraintTop_toTopOf="@id/play1"
        app:layout_constraintBottom_toBottomOf="@id/play1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/right"
        android:src="@drawable/ic_forward_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>